{
  "openapi": "3.0.0",
  "info": {
    "title": "Analysis API",
    "version": "1.0.0",
    "description": "API for analyzing queries using AI"
  },
  "servers": [
    {
      "url": "https://pulse-ai.fly.dev",
      "description": "Production server"
    }
  ],
  "paths": {
    "/api/analyze": {
      "post": {
        "summary": "Analyze a query",
        "operationId": "analyzeQuery",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["query"],
                "properties": {
                  "query": {
                    "type": "string",
                    "description": "The query to analyze"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful analysis",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "answer": {
                      "type": "string",
                      "description": "The analysis result"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Server error",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string",
                      "description": "Error message",
                      "example": "Failed to process query"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
